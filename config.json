{
  "websites": [
    {
      "url": "https://www.hps.hr/novosti/akcije-planinarskih-udruga/",
      "selectors": {
        "eventContainer": "article, .content-list-item, .news-item",
        "eventName": "h2, .title, .news-title",
        "eventDate": "h3:contains('.'), .date, time, .news-date",
        "eventLink": "a[href*='novosti'], a[href*='akcije'], .title a",
        "eventDescription": ".excerpt, .content, .news-excerpt, article p"
      }
    },
    {
      "url": "https://hpdlipa.hr/",
      "selectors": {
        "eventContainer": ".post, article",
        "eventName": "h1, h2, h3",
        "eventDate": "p:contains('.')",
        "eventLink": "a[href*='plakat'], a[href*='izlet'], a[href*='pohod']",
        "eventDescription": ".post-content, .entry-content"
      }
    },
    {
      "url": "https://kpd.hr/",
      "selectors": {
        "eventContainer": ".elementor-post, .elementor-widget-container article, .elementor-posts-container > article",
        "eventName": ".elementor-post__title, .elementor-heading-title, h2.entry-title",
        "eventDate": ".elementor-post-date, .elementor-icon-list-text:contains('.'), time.entry-date",
        "eventLink": "a[href*='izlet'], a[href*='pohod'], a[href*='dogadaj'], .elementor-post__read-more",
        "eventDescription": ".elementor-post__excerpt, .elementor-widget-text-editor, .entry-content"
      }
    }
  ]
}
